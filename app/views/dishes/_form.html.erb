<%= form_for @dish, :html => { :class => "form-horizontal dish", :multipart => true } do |f| %>

  <% if @dish.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ingredients, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ingredients) %>
  </div>
  
  <%= f.fields_for :dish_attachments do |p| %>
     <div class="field">
       <%= p.label :images %><br>
       <%= p.file_field :images, :multiple => true, name: "dish_attachments[images][]" %>
     </div>
   <% end %>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dishes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
