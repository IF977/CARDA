<%- model_class = Manage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              manages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manage_path(@manage), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manage_path(@manage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
 <br><br>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @manage.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @manage.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ingredient) %>:</strong></dt>
  <dd><%= @manage.ingredient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pictures) %>:</strong></dt>
  <dd> <% @manage.pictures.each do |p| %>
                <br><br>
                <%= image_tag p %>
                <br><br>
            <% end %>
        </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              manages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manage_path(@manage), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manage_path(@manage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
