<%= form_tag (del_path) do %>
	<center>
	<table>
	<tr>
	<td align="left"><font size="3"><%= render partial: "hora" %></font></td>
	</tr>
	</table>
	</center>
	<br>
	<br>
	<center><h3>Lista de Compra</h3></center>
	<p>
	
	<table border="2" align="center">
		<tr>
			<th width="150px">Item</th>
			<th width="120px">Qtd</th>
			<th width="80px">Pre√ßo</th>
			<th width="150px">Total</th>
		</tr>
		<% total = 0 %>
		<% @list_comp.each do |y|%>
